{
  "name": "@folio/calendar",
  "version": "1.0.0",
  "description": "Institutional calendar",
  "repository": "folio-org/ui-calendar",
  "publishConfig": {
    "registry": "https://repository.folio.org/repository/npm-folio/"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=6.0.0"
  },
  "main": "index.js",
  "stripes": {
    "type": "app",
    "displayName": "Calendar",
    "route": "/calendar",
    "hasSettings": true,
    "icons": [
      {
        "name": "app",
        "alt": "Institutional calendar",
        "title": "Calendar"
      }
    ],
    "okapiInterfaces": {},
    "permissionSets": [
      {
        "permissionName": "calendar.enabled",
        "displayName": "UI: Calendar module is enabled"
      },
      {
        "permissionName": "calendar.all",
        "displayName": "Calendar: All permissions",
        "description": "Entire set of permissions needed to use the calendar module",
        "subPermissions": [
          "calendar.collection.all"
        ],
        "visible": true
      },
      {
        "permissionName": "calendar.view",
        "displayName": "Calendar: View calendar events",
        "description": "Can view calendar events",
        "subPermissions": [
          "calendar.collection.get"
        ],
        "visible": true
      },
      {
        "permissionName": "calendar.edit",
        "displayName": "Calendar: Edit calendar events",
        "description": "Can edit calendar events",
        "subPermissions": [
          "calendar.view",
          "calendar.collection.update"
        ],
        "visible": true
      },
      {
        "permissionName": "calendar.create",
        "displayName": "Calendar: Create calendar events",
        "description": "Can create calendar events",
        "subPermissions": [
          "calendar.view",
          "calendar.collection.add"
        ],
        "visible": true
      },
      {
        "permissionName": "calendar.delete",
        "displayName": "Calendar: Delete calendar events",
        "description": "Can remove calendar events",
        "subPermissions": [
          "calendar.view",
          "calendar.collection.delete"
        ],
        "visible": true
      }
    ],
    "translations": {
      "en": {
        "search": "Search",
        "resultCount": "{count, number} {count, plural, one {Record found} other {Records found}}"
      },
      "de": {
        "search": "Suche",
        "resultCount": "Gefunden {count, number} {count, plural, one {Aufzeichnung} other {Aufzeichnungen}}"
      },
      "hu": {
        "search": "Keresés",
        "resultCount": "{count, number} {count, plural, one {találat} other {találat}}"
      }
    }
  },
  "scripts": {
    "lint": "eslint *.js",
    "test": "echo 'placeholder. no tests implemented'"
  },
  "devDependencies": {
    "@folio/eslint-config-stripes": "^1.1.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "eslint": "^3.8.0",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-import": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.4.1"
  },
  "dependencies": {
    "@folio/stripes-components": "^2.0.0",
    "@folio/stripes-form": "^0.8.2",
    "@folio/stripes-smart-components": "^1.4.0",
    "@folio/react-big-calendar": "^0.19.0",
    "css-loader": "^0.28.7",
    "dateformat": "^2.0.0",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.4",
    "moment": "^2.19.1",
    "postcss-loader": "^2.0.7",
    "prop-types": "^15.6.0",
    "proptypes": "^1.1.0",
    "query-string": "^5.0.0",
    "redux-form": "^7.2.0",
    "style-loader": "^0.19.0",
    "uuid": "^3.0.1"
  },
  "peerDependencies": {
    "@folio/stripes-connect": "^3.1.0",
    "@folio/stripes-core": "^2.9.0",
    "react": "*",
    "react-bootstrap": "^0.31.1",
    "react-dom": "^16.2.0",
    "react-intl": "^2.3.0",
    "react-router-dom": "^4.0.0"
  }
}
